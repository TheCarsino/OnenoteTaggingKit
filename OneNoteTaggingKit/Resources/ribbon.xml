<?xml version="1.0" encoding="utf-8" ?>
<customUI xmlns="http://schemas.microsoft.com/office/2006/01/customui" loadImage="GetImage">
  <ribbon>
    <tabs>
      <tab idMso="TabHome">
        <group id="PageTagging" label="Page Tags" insertAfterMso="GroupTagging">
          <button id="buttonTagPage"
                  label="Tag Pages - v1.4.14"
                  size="large"
                  screentip="Add tags to or remove tags from OneNote pages."
                  onAction="editTags"
                  image="pageTags.png" />
           <button id="updatePage"
                    label="Update Page"
                    size="normal"
                    screentip="Update imported tags and saved tag searches on the current page."
                    onAction="updatePage"
                    image="refreshPage.png" />
          <button id="buttonSearchTags"
                  label="Find Pages"
                  size="normal"
                  screentip="Find Pages By Tags and Content"
                  onAction="findTags"
                  image="findPageTags.png" />
          <button id="buttonManageTags"
                  label="Settings"
                  size="normal"
                  screentip="Manage Add-In Settings"
                  onAction="manageTags"
                  image="managePageTags.png" />
        </group>
      </tab>
    </tabs>
  </ribbon>
</customUI>